      /* Buttons */
      .btn-modern {
        font-weight: 600;
        padding: 1rem 2rem;
        border-radius: 50px;
        border: none;
        font-size: 1.125rem;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        cursor: pointer;
      }
      
      .btn-modern:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.25);
        text-decoration: none;
      }
      
      .btn-primary-modern {
        background: linear-gradient(135deg, var(--primary-green), var(--dark-green));
        color: white;
      }
      
      .btn-whatsapp {
        background: linear-gradient(135deg, #25D366, #128C7E);
        color: white;
      }
      
      .btn-secondary-modern {
        background: linear-gradient(135deg, var(--primary-orange), var(--secondary-orange));
        color: white;
      }
      
      /* Services Section */
      .services-section {
        background: linear-gradient(135deg, var(--light-gray) 0%, #e5e7eb 100%);
        padding: 80px 0;
      }
      
      .section-title {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 1rem;
        text-align: center;
      }
      
      .section-subtitle {
        font-size: 1.25rem;
        color: var(--text-gray);
        font-weight: 400;
        line-height: 1.6;
        text-align: center;
        max-width: 48rem;
        margin: 0 auto 3rem;
      }
      
      .service-card {
        background: linear-gradient(145deg, var(--black), var(--dark-gray));
        border: none;
        border-radius: 1.5rem;
        transition: all 0.5s ease;
        overflow: hidden;
        position: relative;
        height: 100%;
        color: white;
        padding: 2rem;
      }
      
      .service-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, var(--primary-green), var(--primary-blue));
        opacity: 0;
        transition: opacity 0.5s ease;
        border-radius: 1.5rem;
      }
      
      .service-card:hover::before {
        opacity: 0.1;
      }
      
      .service-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 25px 50px rgba(0,0,0,0.3);
      }
      
      .service-icon {
        width: 4rem;
        height: 4rem;
        background: linear-gradient(135deg, var(--primary-green), var(--primary-blue));
        border-radius: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
        font-size: 2rem;
        transition: transform 0.3s ease;
        position: relative;
        z-index: 2;
      }
      
      .service-card:hover .service-icon {
        transform: scale(1.1);
      }
      
      .service-card .card-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary-yellow);
        margin-bottom: 1rem;
        position: relative;
        z-index: 2;
      }
      
      .service-card .card-text {
        color: #d1d5db;
        font-weight: 400;
        line-height: 1.6;
        margin-bottom: 1.5rem;
        position: relative;
        z-index: 2;
      }
      
      .btn-service {
        background: linear-gradient(135deg, var(--primary-green), var(--dark-green));
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
        font-size: 0.875rem;
        position: relative;
        z-index: 2;
        width: 100%;
        cursor: pointer;
      }
      
      .btn-service:hover {
        background: linear-gradient(135deg, var(--dark-green), var(--primary-green));
        transform: scale(1.05);
        color: white;
      }
      
      .btn-service.btn-lab {
        background: linear-gradient(135deg, var(--primary-orange), var(--secondary-orange));
      }
      
      .btn-service.btn-lab:hover {
        background: linear-gradient(135deg, var(--secondary-orange), var(--primary-orange));
      }
      
      /* CTA Section */
      .cta-section {
        background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-blue) 100%);
        color: white;
        padding: 80px 0;
        text-align: center;
        position: relative;
        overflow: hidden;
      }
      
      .cta-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: radial-gradient(circle at 75% 25%, rgba(255,255,255,0.1) 1px, transparent 1px);
